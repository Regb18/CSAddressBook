@model CSAddressBook.Models.Category

@using CSAddressBook.Services.Interfaces;

@inject IImageService _ImageService

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser)
        </dt>
        <dd>
            @*for an ICollection always think foreach loop, for displaying/getting data/etc...*@

            <ul style="list-style:none">
                @foreach (Contact contact in Model.Contacts)
                {
                    <li>
                        <img src="@_ImageService.ConvertByteArrayToFile(contact.ImageData!, contact.ImageType!)" style="height:40px;width:40px" />
                        <a asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.Id" class="">@contact.FullName</a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>